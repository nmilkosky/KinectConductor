<Window x:Class="Kinect.Recorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Loaded="MainWindowLoaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" 
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Style TargetType="Button" x:Key="RecordButton">
            <Setter Property="Content" Value="Record" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="15" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRecording}" Value="True">
                    <Setter Property="Content" Value="Stop" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsReplaying}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
                <DataTrigger Binding="{Binding KinectPresent}" Value="False">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="ReplayButton">
            <Setter Property="Content" Value="Replay" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="15" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsReplaying}" Value="True">
                    <Setter Property="Content" Value="Stop" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRecording}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="Kinect Conducting Recorder" FontSize="28" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Message}" FontSize="24" Foreground="Red" HorizontalAlignment="Left" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="3">
            <!--This is the display-->
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Image Height="480" Width="640" Source="{Binding ImageSource}"/>
                    <Canvas Name="SkeletonCanvas" Height="480" Width="640" HorizontalAlignment="Center" Background="Transparent" />
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Vertical" Background="AliceBlue" Width="400" Height="507">
                <!--This is the button panel-->
                <StackPanel Orientation="Vertical" Width="300" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="45" />
                        <Button Click="RecordClick" Style="{StaticResource RecordButton}" Width="95" />
                        <Button Click="ReplayClick" Style="{StaticResource ReplayButton}" Width="95" />
                    </StackPanel>
                    <Button x:Name="upButton" Content="Tilt Up" FontSize="15" Click="upButton_Click" Margin="50,2" Width="200" />
                    <Button x:Name="downButton" Content="Tilt Down" FontSize="15" Click="downButton_Click" Margin="50,2" Width="200" />
                    <Button x:Name="resetButton" Content="Reset" FontSize="15" Click="reset_Click" Width="200" Margin="50,2" />
                    <Button x:Name="SettingsButton" Content="Settings" FontSize="15" Click="settings_Click" Width="200" Margin="50,2
                            " />
                </StackPanel>
                <StackPanel Height="60" Margin="25,10,10,0" Background="{Binding MirroringBG}">
                    <TextBlock Text="Mirroring" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="0"/>
                    <TextBlock Text="{Binding Mirroring}" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="10"/>
                </StackPanel>
                <StackPanel Height="60" Margin="25,10,10,0" Background="{Binding SwayingBG}">
                    <TextBlock Text="Swaying" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="0"/>
                    <TextBlock Text="{Binding Swaying}" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="10"/>
                </StackPanel>
                <StackPanel Height="60" Margin="25,10,10,0" Background="{Binding LeaningBG}">
                    <TextBlock Text="Leaning" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="0"/>
                    <TextBlock Text="{Binding Leaning}" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="10"/>
                </StackPanel>
                <StackPanel Height="60" Margin="25,10,10,0" Background="{Binding SvsLBG}">
                    <TextBlock Text="Staccato/Legato" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="0"/>
                    <TextBlock Text="{Binding SvsL}" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="10"/>
                </StackPanel>
                <TextBlock Text="{Binding BPMFB}" FontSize="24" Foreground="Black" HorizontalAlignment="Center" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>